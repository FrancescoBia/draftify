{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2015",
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		},
		"jsx": "react",
		"allowJs": true,
		// "rootDirs": ["./src", "../shared"],
		"types": ["node"]
	},
	"include": [
		"src/**/*",
		"../shared/types/**/*",
		"webpack.config.ts"
		// "electron-builder-config.js"
	],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
